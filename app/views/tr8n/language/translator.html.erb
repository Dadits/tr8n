<%= tr8n_with_options_tag(:default_locale => 'en-US', :admin => true) do %>
	<% if params[:stem_type] %>
	  <% left_right = params[:stem_type].index("right") ? "right" : "left" %>  
	  <%=image_tag("tr8n/top_left_stem.png", :class => "stem #{params[:stem_type]}", :style => "#{left_right}:#{params[:stem_offset]}px")%>
	<% end %>  
	
	<div class="hd">
	  <div class="supplemental">
	    <%=link_to_function(image_tag("tr8n/close.gif", :title=>trla("Close")), "tr8nTranslator.hide()")%>
	  </div>
		<%= tr8n_language_flag_tag(tr8n_current_language) %>
	  <%= trla("{language} Translation", nil, :language => tr8n_current_language.native_name) %>
	</div>
	
	<div id="tr8n_translator_container" class="bd">
	  <%= render(:partial => "translator_#{@mode}") %>
	</div>  
<% end %>